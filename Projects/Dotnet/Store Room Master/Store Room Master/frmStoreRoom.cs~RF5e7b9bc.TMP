        public static DataTable Concatenates(DataTable dtable,string colname,params string[] columns)
        {
            var column = new DataColumn(colname, typeof(string));
            dtable.Columns.Add(column);
            var catenation = string.Empty;
            foreach(var c in columns)
            {
                if(string.IsNullOrEmpty(catenation))
                {
                    catenation = dtable.Rows[0][c].ToString().Trim();
                }
                else
                {
                    catenation = catenation + Environment.NewLine + dtable.Rows[0][c].ToString().Trim();
                }
            }
            dtable.Rows[0][column] = catenation;
            MessageBox.Show(catenation);
            return dtable;
        }
