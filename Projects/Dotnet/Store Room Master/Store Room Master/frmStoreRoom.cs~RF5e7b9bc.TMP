                this.txtAddress.Enabled = vEnabled;
                this.txtPhone.Enabled = vEnabled;
                this.txtValidintran.Enabled = vEnabled;
                this.btnValidintran.Enabled = vEnabled;
                this.chkDeact.Enabled = vEnabled;
                if (!this.pAddMode && !this.pEditMode)
                    this.dtpDeactFrom.Enabled = false;
                else if (this.pEditMode)
                {
                    if (this.chkDeact.Checked)
                        this.dtpDeactFrom.Enabled = true;
                }
            }
            catch (Exception ex)
            {
